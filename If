<!DOCTYPE html>
<html>
<body>

<p>Click the button to get a time-based greeting:</p>
<button onclick="mytime()">Try it</button>
<p id="time"></p>

<script>
function mytime() {
var greeting;
var time = new Date().getHours();

if (time < 10) {
greeting = "Good morning";
} 

else if (time < 20) {
greeting = "Good day";
} 

else {
greeting = "Good evening";
}

document.getElementById("time").innerHTML = greeting;
}
</script>
</body>
</html>
